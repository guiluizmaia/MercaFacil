{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "strict": true,
      "paths": {
        "@infra/*": ["./src/infra/*"],
        "@modules/*": ["./src/modules/*"],
        "@tests/*": ["./src/tests/*"]
      },
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "exclude": ["jest-setup-file.ts", "jest.config.ts"]
  }
  